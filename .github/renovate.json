{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,

  "kustomize": {
    "pinDigests": true
  },
  "terraform": {},

  "packageRules": [
    {
      "matchManagers": ["kustomize"],
      "matchUpdateTypes": ["major", "minor", "patch", "pinDigest", "digest"]
    },
    {
      "matchManagers": ["terraform"],
      "matchUpdateTypes": ["major", "minor", "patch", "pinDigest", "digest"]
    }
  ]
}
