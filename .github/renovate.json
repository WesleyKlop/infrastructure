{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:kubernetes"
  ],
  "additionalBranchPrefix": "{{parentDir}}-",
  "additionalReviewers": [
    "WesleyKlop"
  ],
  "hostRules": [
    {
      "matchHost": "ghcr.io",
      "encrypted": {
        "token": ""
      }
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "kubernetes"
      ],
      "groupName": "kubernetes"
    },
    {
      "versioning": "regex:^(?<compatibility>.*?)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$",
      "matchPackagePatterns": [
        "^ghcr.io\\/linuxserver\\/"
      ]
    }
  ],
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  }
}