{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "semanticCommits": "enabled",
  "labels": ["dependencies"],
  "configMigration": true,

  "github-actions": {},
  "kustomize": {},
  "terraform": {
    "fileMatch": ["versions\\.tf$"]
  },
  "kubernetes": {
    "fileMatch": [
      "apps/.+/resources/[^/]+.ya?ml$",
      "bootstrap/.+/resources/[^/]+.ya?ml$",
      "init/.+/resources/[^/]+.ya?ml$"
    ]
  },

  "packageRules": [
    {
      "matchManagers": ["kustomize", "terraform", "github-actions"],
      "matchUpdateTypes": ["minor", "patch", "pin", "pinDigest", "digest"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "matchManagers": ["kustomize", "terraform", "github-actions"],
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    },
     {
      "packagePatterns": ["^ghcr.io\\/linuxserver\\/"],
      "versionScheme": "regex:^(?<compatibility>.*?)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    }
  ],

  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "ghcr.io",
      "username": "wesleyklop",
      "encrypted": {
        "password": ""
      }
    }
  ]
}
